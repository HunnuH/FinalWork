<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.CoordinateMapper">
	
	<insert id="insert" parameterType="coordinate">
		INSERT INTO COORDINATES VALUES (NO_SEQ.NEXTVAL,#{X},#{Y})
	</insert>
	
	<update id="update" parameterType="coordinate">
		UPDATE COORDINATES SET X = (#{X}), Y = (#{Y}) WHERE NO = 1
	</update>
	
	<select id="select" parameterType="String" 
	resultType="coordinate">
		SELECT * FROM COORDINATES WHERE NO=#{NO}	
	</select>
	
	<select id="selectall" resultType="coordinate">
		SELECT * FROM COORDINATES ORDER BY NO DESC
	</select>
</mapper>






