<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    android:orientation="vertical"
    android:id="@+id/container">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="573dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/pow_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/pow"
                android:textOff=" "
                android:textOn="  " />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="긴급상황"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pow_txt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="전파"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <ToggleButton
                android:id="@+id/con_btn"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/controller"
                android:textOff=" "
                android:textOn=" " />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:text="무선Mode"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/con_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:text="OFF"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/temp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="현재 온도"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="36Cº"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/collision" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="충돌 알림"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/coll_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="Warning!!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/gassensor" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="가스 감지"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gas_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="Warning!!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/firesensor" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="화재 감지"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fire_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="Warning!!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/call_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:onClick="call_click"
                android:scaleType="fitCenter"
                android:src="@drawable/call" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="긴급 전화"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/call_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="call-119"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />


            <ImageButton
                android:id="@+id/cap_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:adjustViewBounds="true"
                android:background="@drawable/fcapture"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="화면 캡처"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="ON"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/move_controller"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button1"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/move_console"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button2"
            android:onClick="move_console"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/move_web"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button3"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/move_gallery"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button4"
            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>