<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    android:orientation="vertical"
    android:id="@+id/container">
    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="573dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/pow_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/pow"
                android:textOff=" "
                android:textOn="  " />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="긴급상황"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pow_txt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="전파"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/data_img"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/data" />

            <Button
                android:id="@+id/data_on"
                android:onClick="data_on"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="100dp"
                android:layout_gravity="right"
                android:text="Data ON"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/data_off"
                android:onClick="data_off"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="100dp"
                android:layout_gravity="right"
                android:text="Data OFF"
                android:backgroundTint="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/temp_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/temp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="현재 온도"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/map" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="위치 알림"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_map"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="90dp"
                android:layout_gravity="right"
                android:text="Map"
                android:backgroundTint="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gas_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/gassensor2" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="가스 감지"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gas_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/fire_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/firesensor2" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="화재 감지"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fire_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/call_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:onClick="call_click"
                android:scaleType="fitCenter"
                android:src="@drawable/call" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="긴급 전화"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/call_txt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="call-119"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />


            <ImageButton
                android:id="@+id/cap_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:adjustViewBounds="true"
                android:background="@drawable/fcapture"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="화면 캡처"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:text="ON"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:gravity="center"
        android:orientation="horizontal">

     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/move_controller"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button1"
            android:onClick="move_controller"
            android:scaleType="fitCenter" />
     </LinearLayout>

     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Console"
            android:textColor="@color/black"
            android:layout_marginLeft="110dp" />

        <ImageButton
            android:id="@+id/move_console"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button2"
            android:onClick="move_console"
            android:scaleType="fitCenter" />
     </LinearLayout>

     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebView"
            android:textColor="@color/black"
            android:layout_marginLeft="105dp" />


        <ImageButton
            android:id="@+id/move_web"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button3"
            android:onClick="move_web"
            android:scaleType="fitCenter" />
     </LinearLayout>

     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textColor="@color/black"
                android:layout_marginLeft="110dp" />

        <ImageButton
            android:id="@+id/move_gallery"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button4"
            android:onClick="move_gallery"
            android:scaleType="fitCenter" />
     </LinearLayout>
    </LinearLayout>
</LinearLayout>